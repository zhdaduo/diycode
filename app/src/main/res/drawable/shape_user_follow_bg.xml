<?xml version="1.0" encoding="utf-8"?>
<shape
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:shape="rectangle">
  <!-- solid 指定形状的填充色-->
  <solid
    android:color="#ff6767">

  </solid>
  <!-- padding 设置内容区域离边界的间距 -->
  <padding
    android:bottom="7dp"
    android:left="12dp"
    android:right="12dp"
    android:top="7dp">

  </padding>
  <!-- corners 设置圆角， 只适合rectangle -->
  <corners
    android:radius="200dp">

  </corners>
  <!-- stroke 设置描边 -->
  <stroke
    android:color="#ff6767"
    android:width="1dp">

  </stroke>
</shape>
